<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Sayd</title>

	<meta name="author" content="Ayden Smith" />
	<link rel="shortcut icon" href="img/logo.jpg" type="image/x-icon" sizes="16x16 32x32" />
	<meta name="viewport" content="width=device-width, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />
	<script src="https://kit.fontawesome.com/d68da1cb3a.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/E_Commerce_Project.styles.css" asp-append-version="true" />

</head>

<body>
    <header>
		<!--Navbar, includes logo image-->
		<div id="tabstrip"></div>

		<section id="header">
			<div style="position: fixed"></div>
			<div id="mobile">
				<i id="bar" class="fa-solid fa-bars"></i>
			</div>
			<div class="logo">
				<a asp-page="Index"><img src="img/logo.jpg" class="logo-size" /></a>
			</div>

			<div>
				<ul id="navbar">
					<li><a class="active" asp-page="Index">Home</a></li>
					<li><a asp-area="" asp-page="About">About</a></li>
					<li><a asp-area="" asp-page="Contact">Contact</a></li>
					<div class="form-container">
						<input type="text" name="text" class="input" placeholder="Search Products" />
						<button class="search__btn">
							<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="22" height="22">
								<path d="M18.031 16.6168L22.3137 20.8995L20.8995 22.3137L16.6168 18.031C15.0769 19.263 13.124 20 11 20C6.032 20 2 15.968 2 11C2 6.032 6.032 2 11 2C15.968 2 20 6.032 20 11C20 13.124 19.263 15.0769 18.031 16.6168ZM16.0247 15.8748C17.2475 14.6146 18 12.8956 18 11C18 7.1325 14.8675 4 11 4C7.1325 4 4 7.1325 4 11C4 14.8675 7.1325 18 11 18C12.8956 18 14.6146 17.2475 15.8748 16.0247L16.0247 15.8748Z"
									  fill="#efeff1"></path>
							</svg>
						</button>
					</div>
					<li>
						<a asp-area="" asp-page="Cart"><i class="fa-solid fa-bag-shopping"></i></a>
					</li>
					<li>
						<a asp-area="" asp-page="Account"><i class="fa-solid fa-user"></i></a>
					</li>
					<a id="close"><i class="fa-solid fa-xmark"></i></a>
				</ul>
			</div>
		</section>
    </header>


    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

	<footer class="section-padding">
		<div class="container">
			<div class="footer-col">
				<img src="~/img/logo.jpg" class="logo-size" />
				<address>
					<h4><strong>Contact</strong></h4>
					<p><strong>Address:</strong> 42 Wallaby Way, Sydney, Australia</p>
					<p><strong>Phone:</strong>(+61)491 570 006</p>
					<p><strong>Store Open Hours:</strong> 8:00 - 18:00, Mon-Sat</p>
				</address>
				<div class="socials">
					<h4>Follow Us On Social Media:</h4>
					<div class="social-icons">
						<a href="https://www.youtube.com/watch?v=dQw4w9WgXcQ"><i class="fa-brands fa-facebook"></i></a>
						<a href="https://www.youtube.com/watch?v=pHqC0uoatag"><i class="fa-brands fa-instagram"></i></a>
						<a href="https://www.youtube.com/watch?v=wY55CdGx4H0"><i class="fa-brands fa-twitter"></i></a>
						<a href="https://www.linkedin.com/in/sayden945/"><i class="fa-brands fa-linkedin"></i></a>
						<a href="https://github.com/Sayden945"><i class="fa-brands fa-github"></i></a>
					</div>
				</div>
			</div>

			<div class="footer-col">
				<h4><strong>About</strong></h4>
				<a href="about.html">About Us</a>
				<a href="FAQ.html">Delivery Information</a>
				<a href="FAQ.html">Privacy Policy</a>
				<a href="FAQ.html">Terms & Conditions</a>
				<a href="contact.html">Contact Us</a>
			</div>

			<div class="footer-col">
				<h4><strong>Account</strong></h4>
				<partial name="_LoginPartial" />
				<a href="cart.html">View Cart</a>
				<a href="orders.html">Wishlist</a>
				<a href="orders.html">Track Order</a>
				<a href="contact.html">Support</a>
			</div>

			<div class="footer-col">
				<h4><strong>Install the App</strong></h4>
				<p>Available on App Store or Google Play</p>
				<div class="badges">
					<div class="introwrap small-12 medium-10 large-8 small-centered columns badges">
						<a href="" class="badge1"><img src="img/pay/ap1.svg" alt="Download on the App Store" /></a>
						<a href="" class="badge2"><img src="img/pay/ap2.png" alt="Get it on Google Play" /></a>
					</div>
				</div>
				<p><strong>Secure Payment Gateways</strong></p>
			</div>
		</div>

		<div class="copyright">
			<p>2023, Sayd - E-Commerce Site</p>
		</div>
	</footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>